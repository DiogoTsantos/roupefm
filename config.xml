<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.roupefm" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EsperancaFM</name>
    <description>
        Player audio from streaming radio EsperancaFM.
    </description>
    <author email="diogo.teobaldo@gmail.com">
        Diogo Teobaldo
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/ldpi-36-logo.png" />
        <icon density="mdpi" src="res/icon/android/mdpi-48-logo.png" />
        <icon density="hdpi" src="res/icon/android/hdpi-72-logo.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi-96-logo.png" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-appminimize" spec="^1.0.1" />
    <engine name="android" spec="^7.1.4" />
</widget>
